{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:storybook": "turbo --filter=storybook build",
    "build:ui": "turbo --filter=flowbite-react build",
    "build:web": "turbo --filter=web build",
    "clean": "turbo clean && rm -rf .turbo node_modules",
    "dev": "turbo dev",
    "dev:storybook": "turbo --filter=storybook dev",
    "dev:ui": "turbo --filter=flowbite-react dev",
    "dev:web": "turbo --filter=web dev",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "lint": "turbo lint",
    "lint:check": "turbo lint:check",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@types/bun": "1.0.2",
    "@types/web": "0.0.134",
    "prettier": "3.2.4",
    "prettier-plugin-packagejson": "2.4.9",
    "prettier-plugin-tailwindcss": "0.5.11",
    "turbo": "latest"
  },
  "packageManager": "bun@1.0.23"
}
