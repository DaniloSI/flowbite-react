{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf",
    "ignore": ["node_modules", "lib", "storybook-static", ".contentlayer", ".next"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    },
    "ignore": ["node_modules", "lib", "storybook-static", ".contentlayer", ".next"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
